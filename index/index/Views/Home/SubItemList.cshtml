@model IEnumerable<index.Models.SubItem>
@{
    ViewBag.Title = "SubItemList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body class="sub_page">
         <section class="food_section layout_padding">
            <div class="container">
                <div class="heading_container heading_center">
                    @if (Model.Count() > 0)
                    {
                        <h1>
                            @Model.FirstOrDefault().Item.item_name
                        </h1>
                    }
                    else
                    {
                       <h1>@ViewBag.Iname</h1>
                    }



                </div>

                <div class="filters-content">
                    <div class="row grid">

                        @foreach (var item in Model)
                        {
                            <div class="col-sm-6 col-lg-4">

                                <div class="box">
                                    <div>
                                        <div class="img-box">
                                            <img src="~/assests/images/f1.png" alt="">
                                        </div>
                                        <div class="detail-box">
                                            <h5>
                                                @item.sub_item_name
                                            </h5>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        }
                    </div>
                </div>

                <div class="btn-box">
                    <a href="">
                        View More
                    </a>
                </div>
            </div>
        </section>
    }

</body>